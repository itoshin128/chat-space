.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        group name
      %ul.main-header__left-box__member-list
        Member：
        %li.main-header__left-box__member-list__member
          username
    .main-header__edit-btn
      = link_to "Edit"
  .messages
    = render "message"
  .form
    %form.new_message
      %input{type: "hidden", value: "✓"}
      %input{type: "hidden"}
      .input-box
        %input{placeholder: "type a message", type: "text", class: "input-box__text"}
        %label{class: "input-box__image"}
          = icon('fas', 'image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", value: "Send", type: "submit", class: "submit-btn"}
        